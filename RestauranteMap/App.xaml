<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:RestauranteMap.Models"
             x:Class="RestauranteMap.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <local:TimeToColorConverter x:Key="TimeToColorConverter" />
            <local:StateToButtonEnabledConverter x:Key="StateToButtonEnabledConverter" />
            <local:TypeToButtonColorConverter x:Key="TypeToButtonColorConverter" />
            <local:NonZeroToVisibleConverter x:Key="NonZeroToVisibleConverter"/>
            <local:NullOrZeroToInvisibleConverter x:Key="NullOrZeroToInvisibleConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
